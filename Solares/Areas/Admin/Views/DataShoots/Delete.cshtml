@model Solares.Models.DataShoot

@{
    ViewData["Title"] = "Delete";
}

<partial name="/Views/Shared/Admin.cshtml" />
<h1 style="z-index:1000;">Edit</h1>


<h4 class="justify-content-center align-content-center d-flex">Home</h4>
<div class="row justify-content-center align-content-center d-flex">
    <div class="col-md-4">
        <form asp-action="Delete" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input disabled readonly asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input readonly disabled asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group pt-1">
                <input type="submit" value="Remove" class="btn btn-primary w-100 " />

            </div>
            <div class="form-group pt-1">
                <a class="btn btn-info w-100 " asp-action="Index">Back to List</a>
            </div>

        </form>
    </div>
</div>
           </div>
        </main>

    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
